{
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "plugins": [
    "promise"
  ],
  "extends": [
    "airbnb", 
    "plugin:prettier/recommended", 
    "prettier/react"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "array-callback-return": 1,
    "callback-return": 2,
    "consistent-return": 1,
    "eqeqeq": 2,
    "for-direction": 2,
    "getter-return": 2,
    "handle-callback-err": 2,
    "no-console": "off",
    "no-regex-spaces": "off",
    "no-debugger": "off",
    "no-unused-vars": "off",
    "no-mixed-spaces-and-tabs": "off",
    "no-undef": "off",
    "no-template-curly-in-string": 1,
    "no-alert": 2,
    "no-caller": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extend-native": 1,
    "no-extra-bind": 1,
    "no-extra-label": 1,
    "no-floating-decimal": 2,
    "no-implicit-coercion": 1,
    "no-loop-func": "off",
    "no-new-func": 2,
    "no-new-wrappers": 1,
    "no-throw-literal": 2,
    "no-await-in-loop": 2,
    "no-compare-neg-zero": 2,
    "no-catch-shadow": 1,
    "no-shadow-restricted-names": 2,
    "no-path-concat": 1,
    "prefer-promise-reject-errors": 2,
    "promise/always-return": 2,
    "promise/catch-or-return": 2,
    "promise/no-nesting": 1,
    "react/jsx-filename-extension": [ 1, { "extensions": [".js", ".jsx"] } ],
    "react/jsx-props-no-spreading": [ 0, {} ]
  }
}
